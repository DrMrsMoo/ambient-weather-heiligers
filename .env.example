# Ambient Weather API Configuration
# Get your API keys from: https://ambientweather.net/account
export AMBIENT_WEATHER_API_KEY=your_api_key_here
export AMBIENT_WEATHER_APPLICATION_KEY=your_application_key_here
export AMBIENT_WEATHER_MACADDRESS=your_mac_address_here

# ============================================
# Production Elasticsearch Cluster
# ============================================
export ES_CLOUD_ID="your_production_cloud_id_here"
export ES_HOSTS="https://your-production-cluster.es.io:9243"
export ES_USERNAME=your_production_username
export ES_PASSWORD=your_production_password_here

# ============================================
# Staging Elasticsearch Cluster
# ============================================
export STAGING_CLOUD_ID="your_staging_cloud_id_here"
export STAGING_ES_HOSTS="https://your-staging-cluster.es.io:9243"
export STAGING_ES_USERNAME=your_staging_username
export STAGING_ES_PASSWORD=your_staging_password_here

# ============================================
# Archive Configuration (for archive-data.js and archive-logs.sh)
# ============================================
# Set this to the path where archived data/logs should be moved
# Example: /Volumes/ExternalDrive/weather-archive or /mnt/nas/weather-archive
export ARCHIVE_PATH=/path/to/archive/storage
